<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#11000000"/>
            <corners android:radius="@dimen/menu_corner_radius" />
        </shape>
    </item>

    <item android:top="1dp" android:left="1dp" android:right="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="#22000000"/>
            <corners android:radius="@dimen/menu_corner_radius" />

        </shape>
    </item>

    <item android:top="1dp" android:left="1dp" android:right="3dp" android:bottom="3dp">
        <shape>
            <solid android:color="#22000000"/>
            <corners android:radius="@dimen/menu_corner_radius" />

        </shape>
    </item>

    <item android:top="1dp" android:left="1dp" android:right="3dp" android:bottom="2dp">
        <shape>
            <solid android:color="#22000000"/>
            <corners android:radius="@dimen/menu_corner_radius" />

        </shape>
    </item>


    <item android:top="1dp" android:left="1dp" android:right="5dp" android:bottom="5dp">
        <shape>
            <solid android:color="?attr/colorPrimary"/>
            <corners android:radius="@dimen/menu_corner_radius" />
        </shape>
    </item>


</layer-list>

