<?xml version="1.0" encoding="utf-8"?>
<!--
This is the background of the search edit view.
Actual color don't matter here I guess since we override them at run time
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--
    Background while not focused.
    -->
    <item android:state_focused="false" >
        <shape>
            <solid android:color="@color/secondary_color"/>
            <corners android:radius="18dp"/>
        </shape>
    </item>
    <!--
    Background while focused.
    -->
    <item android:state_focused="true" >
        <shape>
            <solid android:color="@color/primary_color"/>
            <corners android:radius="18dp"/>
        </shape>
    </item>

</selector>