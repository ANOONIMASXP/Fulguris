<?xml version="1.0" encoding="utf-8"?>
<!--
Not sure why referencing the following style attribute here is not working
android:background="?attr/searchBackground"
Instead we had to use the following directly
android:background="@drawable/card_bg_elevate"

Slions flavor is making changes to search layout notably adjusting margins.

-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/card_bg_elevate"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:descendantFocusability="beforeDescendants"
    android:elevation="2dp"
    android:focusableInTouchMode="false"
    android:gravity="center"
    android:layout_weight="1"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_ssl_status"
        android:layout_width="@dimen/material_grid_touch_small"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Apparently ellipsis won't work with AppCompatAutoCompleteTextView -->
    <acr.browser.lightning.view.SearchView
        android:id="@+id/search"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@null"
        android:completionThreshold="1"
        android:dropDownAnchor="@+id/toolbar_layout"
        android:dropDownWidth="match_parent"
        android:gravity="start|center_vertical"
        android:hint="@string/search_hint"
        android:imeOptions="actionGo"
        android:importantForAutofill="no"
        android:inputType="textUri"
        android:selectAllOnFocus="true"
        android:textColor="?attr/autoCompleteTitleColor"
        android:textColorHint="?attr/autoCompleteUrlColor"
        android:textCursorDrawable="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/search_ssl_status"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginLeft="8dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="middle"
        android:scrollHorizontally="true"
        android:singleLine="true"
         />

</androidx.constraintlayout.widget.ConstraintLayout>
